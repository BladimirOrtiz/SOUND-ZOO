<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/fondo"
    tools:context=".Panel">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/exhibicion_de_animales"
        android:textColor="#1231DA"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.05" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="410dp"
        android:layout_height="141dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.205">

        <ImageButton
            android:id="@+id/btncaballo"
            android:layout_width="50dp"
            android:layout_height="121dp"
            android:layout_weight="1"
            android:onClick="caballo"
            app:srcCompat="@drawable/caballo" />

        <ImageButton
            android:id="@+id/btnelefante"
            android:layout_width="56dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="elefante"
            app:srcCompat="@drawable/elefante" />

        <ImageButton
            android:id="@+id/btngallo"
            android:layout_width="26dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="gallo"
            app:srcCompat="@drawable/gallo" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="406dp"
        android:layout_height="153dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/btngato"
            android:layout_width="41dp"
            android:layout_height="130dp"
            android:layout_weight="1"
            android:onClick="gato"
            app:srcCompat="@drawable/gato" />

        <ImageButton
            android:id="@+id/btnmono"
            android:layout_width="25dp"
            android:layout_height="135dp"
            android:layout_weight="1"
            android:onClick="mono"
            app:srcCompat="@drawable/mono" />

        <ImageButton
            android:id="@+id/btnperro"
            android:layout_width="8dp"
            android:layout_height="133dp"
            android:layout_weight="1"
            android:onClick="perro"
            app:srcCompat="@drawable/perro" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="392dp"
        android:layout_height="141dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.765">

        <ImageButton
            android:id="@+id/btnrana"
            android:layout_width="165dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="rana"
            app:srcCompat="@drawable/rana" />

        <ImageButton
            android:id="@+id/btnvaca"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="vaca"
            app:srcCompat="@drawable/vaca" />

        <ImageButton
            android:id="@+id/btnpato"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="pato"
            app:srcCompat="@drawable/pato" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>